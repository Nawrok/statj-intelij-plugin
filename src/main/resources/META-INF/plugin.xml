<idea-plugin>
    <id>pl.lodz.zzpj.statj</id>
    <name>StatJ</name>
    <vendor>Nawrok</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <actions>
        <action id="pl.lodz.zzpj.statj.actions.StatisticAction" class="pl.lodz.zzpj.statj.actions.StatisticAction"
                text="Show Project Statistics" description="Action that shows project statistics">
            <add-to-group group-id="AnalyzeMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
